@model HastaneRandevuSistemi.Models.BolumModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers 
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
}

<h1>@Localizer["ekle"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="BolumEkle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="BolumAdi" class="control-label">@Localizer["name"]</label>
                <input asp-for="BolumAdi" class="form-control" />
                <span asp-validation-for="BolumAdi" class="text-danger"></span>
            </div>
            @ViewBag.msg
            <div class="form-group">
                <input type="submit" value="@Localizer["pol"]" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Bolum">@Localizer["don"]</a>
</div>

